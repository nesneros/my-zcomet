{
    "title": "my-zcomet: Change shift key",
    "rules": [
        {
            "description": "left_shift alone -> control-shift-spacebar",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar",
                            "modifiers": [
                                "left_control",
                                "left_shift"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "right_shift alone -> control-shift-enter",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "return_or_enter",
                            "modifiers": [
                                "left_control",
                                "right_shift"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "left_command alone -> control-command-spacebar",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar",
                            "modifiers": [
                                "left_control",
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "right_command alone -> control-command-enter",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "return_or_enter",
                            "modifiers": [
                                "left_control",
                                "right_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}