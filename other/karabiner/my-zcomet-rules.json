{
    "title": "my-zcomet: Change shift key",
    "rules": [
        {
            "description": "Post control-shift-enter if left_shift is pressed alone.",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "return_or_enter",
                            "modifiers": [
                                "left_control",
                                "left_shift"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Post shift-enter if right_shift is pressed alone.",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "return_or_enter",
                            "modifiers": [
                                "right_shift"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Post option-command-enter if right_command is pressed alone.",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "return_or_enter",
                            "modifiers": [
                                "right_command",
                                "right_option"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Post control-command-enter if left_command is pressed alone.",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "return_or_enter",
                            "modifiers": [
                                "left_control",
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}